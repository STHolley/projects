<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/achievement_list"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/colorLightTranslucent">

    <ImageView
        android:id="@+id/achievement_list_icon"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <LinearLayout
        android:id="@+id/achievement_list_info"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="5dp">

        <TextView
            android:id="@+id/achievement_list_info_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/colorLightSecondary"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/achievement_list_info_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text=""
            android:textSize="16sp"
            android:textColor="@color/colorLightAccent"/>


    </LinearLayout>
</LinearLayout>