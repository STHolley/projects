<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDarkTranslucent"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
        android:id="@+id/search_pin"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="10dp"
        android:padding="4dp"
        android:src="@drawable/ic_near_me"
        android:tint="@color/colorDarkSecondary" />

    <LinearLayout
        android:id="@+id/search_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/search_info_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="100">

            <TextView
                android:id="@+id/search_info_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingEnd="5dp"
                android:text=""
                android:textColor="@color/colorDarkSecondary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/search_info_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:text=""
                android:textColor="@color/colorDarkAccent"
                android:textSize="9sp" />
        </LinearLayout>

        <Button
            android:id="@+id/search_more_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/theme_dark_button_round"
            android:text="@string/more"
            android:textColor="@color/colorDarkSecondary"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

    </LinearLayout>

</LinearLayout>