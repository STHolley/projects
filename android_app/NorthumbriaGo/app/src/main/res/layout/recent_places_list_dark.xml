<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recent_places_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorDarkTranslucent"
    android:gravity="center|start"
    android:orientation="horizontal"
    android:paddingVertical="15dp"
    android:paddingHorizontal="40dp">

    <LinearLayout
        android:id="@+id/recent_places_list_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recent_places_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:paddingEnd="5dp"
            android:text=""
            android:textColor="@color/colorDarkSecondary"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/recent_places_list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:text=""
            android:textColor="@color/colorDarkAccent"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>